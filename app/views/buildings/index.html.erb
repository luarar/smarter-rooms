<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid 40-margin">
  <div class="container">
    <h1 class="display-4">Buildings</h1>
    <p class="lead"></p>
  </div>
</div>
<div class="container 40-bottom">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Lat</th>
      <th>Long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.adress %></td>
        <td><%= building.lat %></td>
        <td><%= building.long %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path %>

</div>