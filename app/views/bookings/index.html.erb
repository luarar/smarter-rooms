<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid 40-margin">
  <div class="container">
    <h1 class="display-4">Bookings</h1>
    <p class="lead"></p>
  </div>
</div>
<div class="container 40-bottom">

<div class="container">

<table class="table table-dark"> 
  <thead>
    <tr>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Room</th>


    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.valid_from %></td>
        <td><%= booking.valid_to %></td>
        <td><%= booking.room.name %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>